<%- include('../layout/adminheader') %>

<h2 class="page-title">Edit Category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all Categories</a>
<br><br>

<form method="post" action="/admin/categories/edit-category/<%= cat._id %>"> 
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title"  value="<%= cat.title %>" required>
    </div>
    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug"  value="<%= cat.slug %>" required>
    </div>
    <button type="submit" class="btn btn-danger">Sumbit</button>
</form>





<%- include('../layout/adminfooter') %>
